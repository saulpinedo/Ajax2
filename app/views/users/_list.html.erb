<table id="tabla">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody >
			<% @users.each do |user| %>
      		<tr>
       			<td><%= user.name %></td>
        		<td><%= link_to 'Show', user ,remote: true%></td>
       			<td><%= link_to 'Edit', edit_user_path(user) ,remote: true%></td>
       			<td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?',remote: true } %></td>
     		</tr>
    <% end %>

    </tbody>
</table>