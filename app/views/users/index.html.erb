<h1>Listing Users</h1>


<%= form_tag users_path, :method => "get", class: "navbar-form", id: "search-form",remote: true do %>
    <div class="input-append">
      <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search User" %>
      <!-- In order to have the "search" icon int the button, we need to use plain HTML instead 
           of using a Rails form helper -->
      <button class="btn" type="submit"><i class="icon-search"></i>Search</button>
    </div>
  <% end %>

  
<div id="list_users">
  <%= render ("list")%>
</div>
<br>

<%= link_to 'New User', new_user_path,id:'new_link', remote:true %>
